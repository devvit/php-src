#!/usr/bin/env bash

install() {
  version=$2
  install_dir=$3

  build_dir=$(mktemp -d)
  cd $build_dir
  
  # oniguruma
  git clone https://github.com/kkos/oniguruma
  cd oniguruma
  ./autogen.sh
  ./configure --prefix=$install_dir/oniguruma
  make install || exit 1
  
  cd $build_dir
  
  # openssl
  curl -fSL -O https://www.openssl.org/source/openssl-1.1.1l.tar.gz
  tar -xf openssl*.gz
  rm -rf openssl*.gz
  cd openssl*
  ./config --prefix=$install_dir/openssl
  make && make install_sw || exit 1
  
  cd $build_dir

  # php
  curl -fSL -JO https://www.php.net/distributions/php-$version.tar.gz
  tar -xf php*.gz
  rm -rf php*.gz
  cd php*
  
  ./buildconf -f

  platform=$(uname)
  if [ "$platform" == 'Darwin' ]; then
    MACOS_SDK=$(xcrun --show-sdk-path)/usr
    PG_DIR=$(dirname $(pg_config --bindir))
    # export CFLAGS='-I/usr/X11/include -L/usr/X11/lib'
    # --with-gd=/usr/local --with-jpeg-dir=/usr/local --with-png-dir=/usr/local --with-xpm-dir=/usr/X11
    # --with-pear
    # --enable-sockets \
    # PKG_CONFIG_PATH=/usr/local/opt/openssl@1.1/lib/pkgconfig
    OPENSSL_CFLAGS="-I$install_dir/openssl/include" OPENSSL_LIBS="-L$install_dir/openssl/lib -lcrypto -lssl" \
      ONIG_CFLAGS="-I$install_dir/oniguruma/include" ONIG_LIBS="-L$install_dir/oniguruma/lib -lonig" \
      ./configure --prefix=$install_dir \
      --enable-fpm \
      --enable-bcmath \
      --enable-gd \
      --with-iconv=$MACOS_SDK \
      --with-zlib \
      --with-zlib-dir=$MACOS_SDK \
      --with-expat \
      --enable-opcache=no \
      --enable-mbstring \
      --with-openssl \
      --with-pgsql=$PG_DIR \
      --with-pdo-pgsql=$PG_DIR \
      --with-mysqli \
      --with-pdo-mysql \
      --with-mysql-sock=/tmp/mysql.sock
  else
    ./configure --prefix=$install_dir \
      --enable-fpm \
      --enable-sockets \
      --enable-bcmath \
      --with-zlib \
      --enable-opcache=no \
      --enable-mbstring \
      --with-curl \
      --with-openssl \
      --with-mysqli=shared,mysqlnd \
      --with-pdo-mysql=shared,mysqlnd \
      --with-mysql-sock=/tmp/mysql.sock
  fi

  make -s install || exit 1
  
  bin_path=$install_dir/bin
  $bin_path/php -r "copy('https://getcomposer.org/installer', 'composer-setup.php');"
  $bin_path/php composer-setup.php --install-dir=$bin_path --filename=composer
}

install $ASDF_INSTALL_TYPE $ASDF_INSTALL_VERSION $ASDF_INSTALL_PATH
